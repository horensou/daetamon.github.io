 <html lang="en">
 <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
    <title>쉽고 빠르게 대타찾는, 대타몬!</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Plugin CSS -->
    <link href="vendor/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="css/freelancer.min.css" rel="stylesheet">
    <%= render 'layouts/header'%>
</head>
<body>
  <p id="notice"><%= notice %></p>

  <div align = "right">
    <% if user_signed_in? %>
         <%= current_user.email %><br>
        <%= link_to "로그아웃", destroy_user_session_path, method: :delete %>
    <% else %>
        <%= link_to "로그인", user_session_path %>
        <%= link_to "회원가입", "/users/sign_up" %>
    <% end %>
  </div>
  
  <section class="banner-area" id="home">
  		<div class="container">
  			<div class="row d-flex align-items-center justify-content-center">
  				<div class="banner-content col-lg-3 col-md-3">
  					<center><h1 class="title">대타 모집</h1>
  				</div>
  			</div>
  		</div>
    </section>
  

<style>
  .container {
      font-size:15px;
  }
</style>

<center>

<br>
<div class="container" >


<div align="right">
  <%= link_to '새 글 쓰기', new_info_path %>
</div>
<br>
<table class="table table-hover">

    <tr align="left" style = "background-color:rgb(30,177,138)">
      <th><font color="white">No</font></th>
      <th><font color="white">제목</font></th>
      <th><font color="white">등록일</font></th>

      <th align="center"><font color="white">조회수</font></th>
    </tr>

  <tbody>
    
    <% @infos.each do |info| %>
      <tr height="30" align="center">
        <td width="10%" align="left"><i class="fa fa-user-o" aria-hidden="true"></i> <%= info.id %></td>
        <td width="40%" align="left"><i class="fa fa-user-o" aria-hidden="true"></i> <%= link_to info.title, info %></td>
        <% str = info.created_at %>
        <td width="20%" align="left"><i class="fa fa-clock-o" aria-hidden="true"></i><%= "#{time_ago_in_words(info.created_at)} 전" %></td>
        
        <td width="10%" align="center"><%= info.impressionist_count %></td>
      </tr>
     
    <% end %>
  </tbody>
  
</table>

<br>
<div align="right">
<%= form_tag infos_path, :method => :get do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "검색", :name => nil %>
<% end %>
</div>





<br><br>
</body>
